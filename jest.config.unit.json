{
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.ts"],
    "testMatch": [
        "**/__tests__/unit/**/*.test.ts"
    ],
    "transform": {
        "^.+\\.ts$": "ts-jest"
    },
    "collectCoverage": true,
    "coverageDirectory": "coverage/unit",
    "coverageThreshold": {
        "global": {
            "branches": 100,
            "functions": 100,
            "lines": 100
        }
    },
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/main.ts",
      "!src/utils/logger.ts",
      "!src/**/__tests__/**",
      "!src/config/**.ts",
      "!src/routes/**.ts",
      "!src/server/**.ts",
      "!src/containers/*.ts"
    ],
  "errorOnDeprecated": true,
  "snapshotFormat": {
    "escapeString": true,
    "printBasicPrototype": true
  }
}
